{{ >layout/mainRestricted}}

<div class="container d-flex justify-content-center align-items-center vh-100 p-5">
    <form class="justify-content-center" action="/restricted/admin/login" method="POST">
        <div class="card m-5" style="width: 20rem;">
            <div class="card-body text-center">
                <h5 class="card-title">Log In</h5>
                <div class="form-floating mb-3">
                    <input name="username" type="text" class="form-control" id="floatingInput" placeholder="Username">
                    <label for="floatingInput">Username</label>
                </div>
                <div class="form-floating mb-3">
                    <input name="password" type="password" class="form-control" id="floatingInput" placeholder="Password">
                    <label for="floatingInput">Password</label>
                </div>
                <button type="submit" class="btn btn-primary">Log In</button>
            </div>
        </div>
    </form>
</div>